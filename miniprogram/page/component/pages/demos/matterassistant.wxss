    box-shadow: 0 0 7px yellow;
    border: 3px solid yellow;
}

.radio-yellow-no{
    box-shadow: 0 0 7px yellow;
    border: 3px solid yellow;
}

.radio-red{
    background-color: red;
    box-shadow: 0 0 7px red;
    border: 3px solid red;
}

.radio-red-no{
    box-shadow: 0 0 7px red;
    border: 3px solid red;
}