@import "./matterassistant/utils/base.wxss";
@import "./matterassistant/utils/calendar.wxss";
@import "./matterassistant/utils/detail.wxss";

.wrapper {
    padding-bottom: 160rpx;
}

.show-date {
    margin: 20rpx 0;
    text-align: center;
    font-size: 60rpx;
    font-weight: lighter;
    color: #E14848
}

.common-list .item {
    overflow: hidden;
    flex:12;
    display: flex;
}

.common-list .header {
    border-top: 2rpx solid #333;margin: 0 40rpx;padding: 20rpx 0;color: #AAA;font-size: 30rpx;
}

.common-list .item .icon {
    position: absolute;
    left: 0;
    top: 20rpx;
    width: 60rpx;
    height: 60rpx;
}

.common-list .item .content {
    flex: 10;
}
.common-list .item .title {
    display: block;
    overflow: hidden;
    white-space:nowrap;
    text-overflow: ellipsis;
    font-weight: lighter;
    font-size: 32rpx;
}

/*action sheet*/
.actionItem  {
    color: #555;
    font-size: 36rpx;
}
.actionItem.cancel {
    color: #888
}


/*update panel style*/
.updatePanel,.detailPanel {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    background: #000;
    overflow: hidden;
    z-index: 1000
}
.updatePanel .title {
    font-size: 48rpx;
    font-weight: lighter;
    text-align: center;
    padding: 20rpx 0;
    margin-bottom: 20rpx;
}
.updatePanel input, .updatePanel textarea {
    background: #222;
    padding: 20rpx;
    font-size: 36rpx;
    width: auto;
    color: #CCC;
}
.updatePanel textarea {
    border-top: 2rpx solid #333;
}

.updatePanel .level {
    position: absolute;
    left: 0;
    right: 0;
    height: 100rpx;
    bottom: 100rpx;
    border-top: 2rpx solid #333;
    padding: 20rpx 0;
    display: flex;
    align-items: center;
    justify-content: center;
}
.updatePanel .level .item {
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
    margin: 0 60rpx;
}
.updatePanel .footer, .detailPanel .footer {
    position: fixed;
    display: flex;
    left: 0;
    height: 100rpx;
    right: 0;
    bottom: 0;
    border-top: 2rpx solid #333;
}
.updatePanel .footer .btn, .detailPanel .footer .btn {
    flex: 1;
    text-align: center;
    line-height: 100rpx;
    font-size: 36rpx;
    color: #DDD;
}
.updatePanel .footer .btn:active {
    background: #333;
}
.updatePanel .footer .btn.primary {
    background: #E14848;
}
.updatePanel .footer .btn.primary:active {
    background: #D64343
}

/*level radios*/
.radio-base{
    width:26px;
    height:26px;
    box-sizing:border-box;
    display:inline-block;
    vertical-align:middle;
    margin:0 15px 0 3px; 
    border-radius: 50%;
    background-clip: content-box;
    padding: 2px;
}

.radio-green{
    background-color: green;
    box-shadow: 0 0 7px green;
    border: 3px solid green;
}

.radio-green-no{
    box-shadow: 0 0 7px green;
    border: 3px solid green;
}

.radio-yellow{
